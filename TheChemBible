            ]
        };

        let currentTest = 'all';
        let currentIndex = 0;
        let currentQuestions = [];
        let showingAnswer = false;
        let mode = 'flashcard'; // 'flashcard' or 'quiz'
        let userAnswers = {};
        let studiedQuestions = new Set();

        function loadQuestions() {
            currentQuestions = [];
            if (currentTest === 'all') {
                for (let test in questions) {
                    questions[test].forEach((q, idx) => {
                        currentQuestions.push({...q, test: test, originalIndex: idx});
                    });
                }
            } else {
                questions[currentTest].forEach((q, idx) => {
                    currentQuestions.push({...q, test: currentTest, originalIndex: idx});
                });
            }
            updateStats();
        }

        function displayQuestion() {
            if (currentQuestions.length === 0) return;
            
            const q = currentQuestions[currentIndex];
            showingAnswer = false;
            
            document.getElementById('questionNumber').textContent = `Question ${currentIndex + 1}`;
            document.getElementById('testLabel').textContent = `Test ${q.test}`;
            document.getElementById('questionText').textContent = q.q;
            
            const optionsContainer = document.getElementById('optionsContainer');
            const answerSection = document.getElementById('answerSection');
            const flipHint = document.getElementById('flipHint');
            const questionKey = `${q.test}-${q.originalIndex}`;
            const hasAnswered = userAnswers[questionKey] !== undefined;
            
            if (mode === 'flashcard') {
                optionsContainer.innerHTML = '';
                answerSection.classList.add('hidden');
                flipHint.style.display = 'block';
            } else {
                flipHint.style.display = 'none';
                optionsContainer.innerHTML = '';
                q.opts.forEach((opt, idx) => {
                    const letter = String.fromCharCode(65 + idx);
                    const div = document.createElement('div');
                    div.className = 'option';
                    div.textContent = `${letter}) ${opt}`;
                    div.onclick = (e) => {
                        e.stopPropagation();
                        selectOption(letter);
                    };
                    
                    if (hasAnswered) {
                        if (userAnswers[questionKey] === letter) {
                            if (letter === q.ans) {
                                div.classList.add('correct');
                            } else {
                                div.classList.add('incorrect');
                            }
                        } else if (letter === q.ans) {
                            div.classList.add('correct');
                        }
                    }
                    
                    optionsContainer.appendChild(div);
                });
                
                if (hasAnswered) {
                    answerSection.classList.remove('hidden');
                    document.getElementById('correctAnswer').textContent = `${q.ans}) ${q.opts[q.ans.charCodeAt(0) - 65]}`;
                } else {
                    answerSection.classList.add('hidden');
                }
            }
            
            updateProgress();
        }

        function selectOption(letter) {
            const q = currentQuestions[currentIndex];
            const questionKey = `${q.test}-${q.originalIndex}`;
            userAnswers[questionKey] = letter;
            studiedQuestions.add(questionKey);
            displayQuestion();
            updateStats();
        }

        function flipCard() {
            if (mode !== 'flashcard') return;
            
            const answerSection = document.getElementById('answerSection');
            const flipHint = document.getElementById('flipHint');
            const q = currentQuestions[currentIndex];
            
            if (!showingAnswer) {
                answerSection.classList.remove('hidden');
                document.getElementById('correctAnswer').textContent = `${q.ans}) ${q.opts[q.ans.charCodeAt(0) - 65]}`;
                flipHint.textContent = 'Click card to hide answer';
                showingAnswer = true;
                
                const questionKey = `${q.test}-${q.originalIndex}`;
                studiedQuestions.add(questionKey);
                updateStats();
            } else {
                answerSection.classList.add('hidden');
                flipHint.textContent = 'Click card to reveal answer';
                showingAnswer = false;
            }
        }

        function nextQuestion() {
            if (currentIndex < currentQuestions.length - 1) {
                currentIndex++;
                displayQuestion();
            }
        }

        function previousQuestion() {
            if (currentIndex > 0) {
                currentIndex--;
                displayQuestion();
            }
        }

        function shuffleQuestions() {
            for (let i = currentQuestions.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [currentQuestions[i], currentQuestions[j]] = [currentQuestions[j], currentQuestions[i]];
            }
            currentIndex = 0;
            displayQuestion();
        }

        function toggleMode() {
            mode = mode === 'flashcard' ? 'quiz' : 'flashcard';
            document.getElementById('modeText').textContent = mode === 'flashcard' ? 'Flashcard' : 'Quiz';
            displayQuestion();
        }

        function resetProgress() {
            if (confirm('Are you sure you want to reset all progress?')) {
                userAnswers = {};
                studiedQuestions = new Set();
                updateStats();
                displayQuestion();
            }
        }

        function updateStats() {
            document.getElementById('totalQuestions').textContent = currentQuestions.length;
            document.getElementById('currentQuestion').textContent = currentIndex + 1;
            
            let correctCount = 0;
            for (let key in userAnswers) {
                const [test, idx] = key.split('-');
                if (questions[test] && questions[test][idx] && userAnswers[key] === questions[test][idx].ans) {
                    correctCount++;
                }
            }
            
            document.getElementById('correctCount').textContent = correctCount;
            document.getElementById('studiedCount').textContent = studiedQuestions.size;
        }

        function updateProgress() {
            const progress = ((currentIndex + 1) / currentQuestions.length) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        document.getElementById('testFilter').addEventListener('change', function() {
            currentTest = this.value;
            currentIndex = 0;
            loadQuestions();
            displayQuestion();
        });

        // Initialize
        loadQuestions();
        displayQuestion();
    </script>
</body>
</html>
